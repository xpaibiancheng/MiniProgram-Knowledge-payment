.idnexTopbg{  
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    z-index: -999;
}
.idnexTopbg>image{
    width: 100%;
}
/* 导航栏 */
.indexTopNav{
    width: 95%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 160rpx;
    left: 30rpx;
    z-index: 999;
}
.NavRows{
    width: 25%;
    text-align: center;
    color: rgb(121, 120, 120);
    border-radius: 10rpx;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 35rpx;
}
.clickNavRows{
    background-color: #3478f6;
    color: white;
}
/* 轮播图 */
.banner{
    width: 95%;
    margin:0 auto;
    border-radius: 20rpx;
    overflow: hidden;
    transform: translateY(0);
    margin-top: -20rpx;
    position: relative;
    z-index: 1;
  }
.bannerimage{
    width: 100%;
    height: 350rpx;
}
/* 功能区 */
.function{
    width: 95%;
    height: 250rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: white;
    margin: 30rpx auto;
    border-radius: 20rpx
}
.functon_row{
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 25rpx;
}
.functon_row>image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 15rpx;
}
.publiaCcount{
    width: 95%;
    margin: 20rpx auto;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.publicTop{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-top: 15rpx;
}
.publicLeftRight{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 10rpx;
}
.publicLeftRight>image{
    width: 60rpx;
    height: 60rpx;
}
.publicRight{
    font-size: 25rpx;
    color: rgb(107, 107, 107);
    margin-right: 20rpx;
}
.publiaCcount_scoller{
    width: 700rpx;
    white-space: nowrap;
    height: 300rpx;
    margin-top: 20rpx auto;
    padding-top: 20rpx;
}
.scollerRows{
    width: 267rpx;
    display: inline-flex;
    /* display: flex; */
    flex-direction:column;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
}
.scollerRowsImg{
    width: 95%;
    height: 150rpx;
    /* border-radius: 10rpx; */
}
.scollerRowsTitle{
    width: 95%;
    height:80rpx;
    margin-top: 10rpx;
    white-space: pre-wrap;
    font-size: 28rpx;
    /* 弹性盒子布局 */
    display: -webkit-box;
    /* 超出 文本省略号*/
    text-overflow: ellipsis;
    /* 隐藏超出文本*/
    overflow: hidden;
    /* 允许最大文本行数 */
    -webkit-line-clamp:2;
    /* 自动换行 */
    word-break: break-all;
    -webkit-box-orient: vertical;

}
.scollerRowsInfo{
    width: 95%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 25rpx;
    color: rgb(107, 107, 107);
}
.scollerRowsInfoSkill{
    display: flex;
    flex-direction: row;
    align-items: center;
    
}
.scollerRowsInfoSkill>image{
    width: 40rpx;
    height:40rpx;
}
/* 文章专区 */
.articleTop{
    width: 95%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
  }
  .articleTitleLeft{
    display: flex;
    flex-direction: row;
    align-items: center;
  }
/* 文章内容 */
.article{
    width: 95%;
    height: 250rpx;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: 20rpx auto;
  }
  .articleLeft,.articleRight{
    width: 45%;
    height: 85%;
  }
  .articleLeft{
    margin-right: 20rpx;
  }
  .articleRight{
    display: flex;
    flex-direction: column;
    margin-left: 10rpx;
  }
  .articleRightTitle{
    height: 80%;
    width: 100%;
  }
  .articleLeft>image{
    border-radius: 10rpx;
    overflow: hidden;
  }
  .articleRightInfo{
    width: 100%;
    color: rgb(107, 107, 107);
    font-size: 25rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  /* 底部提示 */
.indexButtoon{
    width: 100%;
    text-align: center;
    color: rgb(107,107,107);
    margin-bottom: 10rpx;
  }
